<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.oropallo.assunta.recipes.AddRicettaFragment2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeIng"
        android:layout_below="@+id/grid_category"
        android:alignmentMode="alignBounds">
        <TextView
            android:text="Ingredienti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:id="@+id/textView_addRicetta_Ingredienti"
            android:fontFamily="cursive"
            android:textSize="24sp"
            android:paddingRight="80dp" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_add"
            android:layout_below="@+id/textView_addRicetta_Ingredienti"
            android:id="@+id/addButton"
            android:background="@color/spots_dialog_color" />
        <requestFocus></requestFocus>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/addButton"
            android:layout_alignParentStart="true"
            android:id="@+id/recycler_view_addIngredienti"
            android:paddingStart="10dp" />

        <TextView
            android:text="      nuovo ingrediente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/add_ing_b"
            android:fontFamily="cursive"
            android:textSize="24sp"
            android:layout_above="@+id/recycler_view_addIngredienti"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>


</FrameLayout>
