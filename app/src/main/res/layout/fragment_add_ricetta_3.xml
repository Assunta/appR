<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.oropallo.assunta.recipes.AddRicettaFragment3">

    <TextView
        android:text="Nota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scrollProcedimento"
        android:layout_alignParentStart="true"
        android:id="@+id/textViewAddNota"
        android:fontFamily="cursive"
        android:textSize="30sp"
        android:layout_marginLeft="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_alignTop="@+id/textViewAddNota"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp"
        android:id="@+id/editTextAddNota"
        android:layout_marginLeft="10dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/scrollProcedimento"
        android:layout_below="@+id/textView3">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editTextProcediemento"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp"
        android:layout_marginLeft="10dp" />
    </ScrollView>

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextAddNota"
        android:layout_marginStart="19dp"
        android:layout_marginTop="19dp"
        android:id="@+id/buttonSaveRicetta" />

    <TextView
        android:text="Procedimento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:fontFamily="cursive"
        android:textSize="24sp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
</ScrollView>